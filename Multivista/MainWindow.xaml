<Window
    x:Class="Multivista.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Multivista"
    mc:Ignorable="d"
    Title="MainWindow"
    Height="450"
    Width="800">
    <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" 
                    DockPanel.Dock="Top"
                   Margin="0,10">
            <Button Command="{Binding Path=AbrirUC1Command}">
                UC1
            </Button>
            <Button
                Command="{Binding Path=AbrirUC2Command}">
                UC2
            </Button>
            
        </StackPanel>
        <ContentControl Content="{Binding Path=Opcion}">
            
        </ContentControl>
                     
    </DockPanel>
</Window>
